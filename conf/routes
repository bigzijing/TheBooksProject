# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# REST API for Books
# TODO: Migrate
GET     /books                      controllers.rest.BooksController.getAll()
GET     /rest/books                 controllers.rest.BooksController.getAllBooks()
GET     /rest/books/isbn/:isbn      controllers.rest.BooksController.findBookByISBN(isbn: String)
GET     /rest/books/title/:title    controllers.rest.BooksController.findBookByTitle(title: String)

GET     /books/:ISBN                controllers.rest.BooksController.getByISBN(ISBN: Long)
PUT     /books/viewbook/:ISBN       controllers.rest.BooksController.viewBook(ISBN: Long)
DELETE  /books/deleteall            controllers.rest.BooksController.deleteAll()
POST    /books                      controllers.rest.BooksController.addNewBook()